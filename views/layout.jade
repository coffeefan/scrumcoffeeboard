doctype html
html
    head
        script#item-template(type='text/template').
            <div class="panel-group view sortable-item" id="accordion-<%= id %>" role="tablist" aria-multiselectable="true">
              <div class="panel panel-default">
              <div class="panel-heading" role="tab" id="headingOne">
              <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion-<%= id %>" href="#box-<%= id %>" aria-expanded="false" aria-controls="box-<%= id %>">
                <%= title%>
              </a>
              </h4>
              </div>
              <div id="box-<%= id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
              <div class="panel-body">
                <form>
                  <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control title" value="<%= title %>" />
                  </div>
                  <div class="form-group">
                      <label for="exampleInputFile">Description</label>
                      <textarea class="form-control description" rows="3"><%= description%></textarea>
                  </div>
                  <div class="form-group">
                    <label>Verantwortliche(r)</label>
                    <input type="text" class="form-control responsible" value="<%= responsible %>" />
                  </div>
                  <div class="form-group">
                      <label>Kosten</label>
                      <select class="form-control sbcost" id="sbcost-<%= id %>">
                          <option value="1" <% if (cost== 1) { %>selected="selected"<% } %>>1</option>
                          <option value="2" <% if (cost== 2) { %>selected="selected"<% } %>>2</option>
                          <option value="3" <% if (cost== 3) { %>selected="selected"<% } %>>3</option>
                          <option value="5" <% if (cost== 5) { %>selected="selected"<% } %>>5</option>
                          <option value="8" <% if (cost== 8) { %>selected="selected"<% } %>>8</option>
                       </select>
                  </div>
                  <a class="btn btn-default loeschen">LÃ¶schen</a>
                </form>
              </div>
              </div>
              </div>
              </div>
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='/javascripts/lib/jquery.js')
        script(src='/javascripts/lib/jquery-ui.min.js')
        script(src='/javascripts/lib/bootstrap.min.js')
        script(src='/javascripts/lib/underscore.js')
        script(src='/javascripts/lib/backbone.js')
        script(src='/javascripts/lib/backbone.localStorage.js')

        script(src='/javascripts/models/scrumtask.js')
        script(src='/javascripts/collections/scrumtasks.js')
        script(src='/javascripts/views/scrumview.js')
        script(src='/javascripts/views/scrumtaskview.js')

        script(src='/javascripts/app.js')

    body
        include header

        block content

        include footer
